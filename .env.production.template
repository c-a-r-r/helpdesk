# Production Environment Configuration
# Copy this file to .env and update with your production values

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=production
DEBUG=false

# ==============================================
# DATABASE CONFIGURATION (RDS)
# ==============================================
DB_TYPE=mariadb
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=helpdesk_crm
DB_USER=admin

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_REGION=us-west-2
AWS_DEFAULT_REGION=us-west-2

# ==============================================
# AWS SECRETS MANAGER CONFIGURATION
# ==============================================
SECRETS_MANAGER_ENABLED=true
DB_PASSWORD_SECRET_NAME=helpdesk-crm/db-password
JWT_SECRET_SECRET_NAME=helpdesk-crm/jwt-secret
JUMPCLOUD_CREDENTIALS_SECRET_NAME=helpdesk-crm/jumpcloud-credentials
GOOGLE_CREDENTIALS_SECRET_NAME=helpdesk-crm/google-credentials
FRESHSERVICE_API_KEY_SECRET_NAME=helpdesk-crm/freshservice-api-key

# ==============================================
# APPLICATION URLS
# ==============================================
# Update these with your actual domain
CORS_ORIGINS=https://helpdesk.yourdomain.com,https://www.helpdesk.yourdomain.com
REDIRECT_URI=https://helpdesk.yourdomain.com/api/v1/auth/callback
API_BASE_URL=https://helpdesk.yourdomain.com/api/v1

# ==============================================
# JUMPCLOUD CONFIGURATION
# ==============================================
# Update with your JumpCloud organization
JUMPCLOUD_ISSUER=https://your-org.jumpcloud.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ALLOWED_HOSTS=helpdesk.yourdomain.com,www.helpdesk.yourdomain.com
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Backend worker configuration
WORKERS=4
MAX_WORKERS=8
WORKER_TIMEOUT=30

# Database connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
ENABLE_METRICS=true
LOG_LEVEL=INFO
ACCESS_LOG=false

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_OFFBOARDING=true
ENABLE_GOOGLE_WORKSPACE=true
ENABLE_AUTOMOX=true
ENABLE_FRESHSERVICE_SYNC=true

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=helpdesk-crm-backups-your-account-id

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================
# Email notifications for critical events
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD_SECRET_NAME=helpdesk-crm/smtp-password
ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# ==============================================
# SESSION CONFIGURATION
# ==============================================
SESSION_TIMEOUT=3600
REMEMBER_ME_DURATION=2592000

# ==============================================
# DEVELOPMENT OVERRIDES (Production should be false)
# ==============================================
RELOAD=false
DEVELOPMENT_MODE=false
