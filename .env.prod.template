# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values

# Database Configuration (RDS)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=helpdesk_crm
DB_USER=admin
DB_PASSWORD=your-secure-password

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Secrets Manager
SECRETS_MANAGER_ENABLED=true
GOOGLE_CREDENTIALS_SECRET_NAME=helpdesk-crm/google-credentials
JUMPCLOUD_API_KEY_SECRET_NAME=helpdesk-crm/jumpcloud-api-key
FRESHSERVICE_API_KEY_SECRET_NAME=helpdesk-crm/freshservice-api-key

# Application Configuration
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=https://helpdesk.amer.biz,http://helpdesk.amer.biz
API_V1_STR=/api/v1

# Security
ALLOWED_HOSTS=helpdesk.amer.biz,your-ec2-ip
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services
FRESHSERVICE_DOMAIN=your-company.freshservice.com
JUMPCLOUD_ORG_ID=your-jumpcloud-org-id
GOOGLE_WORKSPACE_DOMAIN=your-company.com

# Email Configuration (if using SES)
EMAIL_BACKEND=ses
SES_REGION=us-west-2
FROM_EMAIL=noreply@your-company.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using
